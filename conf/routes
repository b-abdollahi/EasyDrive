# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Ads.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


GET           /advertisements/                                  controllers.Ads.list(page: Int ?= 0)
GET           /advertisements/new                               controllers.Ads.newAd()
GET           /advertisements/id/                               controllers.Ads.details(id: Long)
POST          /advertisements/                                  controllers.Ads.save()
DELETE        /advertisements/id/                           controllers.Ads.delete(id: Long)
